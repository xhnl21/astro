---
interface Props{
	title: string;
}

const { title } = Astro.props;
---
<div class="main-content flex flex-col flex-grow p-4">
    <h1 class="font-bold text-2xl text-gray-700">{title}</h1>
    <div class="flex flex-col flex-grow border-4 border-gray-400 border-dashed bg-white rounded mt-4 p-4">
        <slot />
    </div>
</div>